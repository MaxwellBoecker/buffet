{
  "name": "@buffetjs/core",
  "version": "3.2.1",
  "description": "Buffetjs Core Components",
  "main": "build",
  "module": "build/esm/index.js",
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "yarn build:development && yarn build:production && yarn build:esm",
    "build:analyze": "cross-env NODE_ENV=production webpack-cli --json > build/stats.production.json && webpack-bundle-analyzer build/stats.production.json",
    "build:development": "cross-env NODE_ENV=development webpack-cli",
    "build:esm": "cross-env BABEL_ENV=esm babel ./src --out-dir ./build/esm --ignore \"**/*.test.js\" --ignore \"**/test.js\" ",
    "build:production": "cross-env NODE_ENV=production APP_ENV=production webpack-cli",
    "build:watch": "cross-env NODE_ENV=development webpack-cli -w",
    "builde": "cross-env NODE_ENV=production rimraf dist && babel --config-file ../../.babelrc src --out-dir dist --copy-files --no-comments && rimraf dist/**/**/tests",
    "test": "echo \"Error: no test specified\" && exit 1",
    "buildee": "cross-env NODE_ENV=production rimraf dist && babel --config-file ../../.babelrc src --out-dir dist --copy-files --no-comments && rimraf dist/**/**/tests",
    "lint": "eslint --c ../../.eslintrc src",
    "prepublishOnly": "npm run build",
    "watch": "babel --config-file ../../.babelrc src --watch --out-dir dist --copy-files --no-comments && rimraf dist/**/**/tests"
  },
  "dependencies": {
    "@buffetjs/hooks": "3.2.1",
    "@buffetjs/icons": "3.2.1",
    "@buffetjs/styles": "3.2.1",
    "@buffetjs/utils": "3.2.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-regular-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "invariant": "^2.2.4",
    "moment": "^2.24.0",
    "rc-input-number": "^4.5.0",
    "react-dates": "^21.5.1",
    "react-moment-proptypes": "^1.7.0",
    "react-with-direction": "^1.3.1"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "jest-styled-components": "^7.0.0",
    "lodash": "^4.17.11",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-is": "^16.12.0",
    "react-router-dom": "^5.1.0",
    "reactstrap": "^8.0.1",
    "styled-components": "^5.0.0",
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-transform-flow-strip-types": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-module-resolver": "3.0.0",
    "bundlesize": "^0.17.0",
    "cross-env": "^5.1.4",
    "mini-css-extract-plugin": "^0.4.0",
    "url-loader": "^1.0.1",
    "webpack": "~4.5.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "~2.0.14"
  },
  "peerDependencies": {
    "lodash": "^4.17.11",
    "prop-types": "^15.5.10",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.1.0",
    "styled-components": "^5.0.0"
  },
  "keywords": [
    "Buffetjs",
    "React"
  ],
  "author": "Strapi team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/strapi/buffet"
  }
}
